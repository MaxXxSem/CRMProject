<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/bs")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("Scripts", false)
    @RenderSection("Styles", false)
    <link href="~/Content/css/layout.css" rel="stylesheet" />
    <script src="~/Scripts/userScripts/layout.js"></script>
</head>
<body>
    <div id="page-content">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
            <a class="navbar-brand" href="#">CRM</a>
            <!-- Toggle button -->
            <div id="toggle-button">
                <button type="button" id="sidebarCollapse" class="btn btn-info navbar-btn">
                    <i class="glyphicon glyphicon-align-left"></i>Sidebar
                </button>
            </div>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="nav navbar-nav ml-auto text-white">
                    <li class="nav-item highlighted">
                        <a class="nav-link text-white" href="#">Notifications</a>
                    </li>
                    <li class="nav-item highlighted">
                        <a class="nav-link text-white" href="/Account/SignOut">Log Out</a>
                    </li>
                </ul>
            </div>
        </nav>
        
        <!-- Sidebar -->
        @*<div id="sidebar-wrapper" class="wrapper position-fixed">*@
            <nav id="sidebar" class="position-fixed">
                <!-- Sidebar Header -->
                <div class="sidebar-header">
                    <a href="#">Name</a>
                </div>

                <!-- Sidebar Links -->
                <ul class="list-unstyled components">
                    <li>
                        <a href="/Transaction/TransactionsList">
                            Transactions
                        </a>
                    </li>
                    <li>
                        <a href="/Client/ClientsList">
                            <i class="glyphicon glyphicon-briefcase"></i>Clients
                        </a>
                    </li>
                    <li>
                        <a href="/Contact/ContactsList">
                            <i class="glyphicon glyphicon-link"></i>Contacts
                        </a>
                    </li>
                    <li>
                        <a href="/Task/TasksList">
                            <i class="glyphicon glyphicon-send"></i>Tasks
                        </a>
                    </li>
                    <li>
                        <a href="#adminSubmenu" data-toggle="collapse" aria-expanded="false">
                            <i class="glyphicon glyphicon-duplicate"></i>Admin
                        </a>
                        <ul class="collapse list-unstyled" id="adminSubmenu">
                            <li><a href="#">Users</a></li>
                            <li><a href="#">Delete account</a></li>
                        </ul>
                    </li>
                    <li>
                        <a href="#reportSubmenu" data-toggle="collapse" aria-expanded="false">
                            <i class="glyphicon glyphicon-duplicate"></i>Report
                        </a>
                        <ul class="collapse list-unstyled" id="reportSubmenu">
                            <li><a href="#">Managers report</a></li>
                            <li><a href="#">Transactions report</a></li>
                        </ul>
                    </li>
                </ul>
            </nav>
        @*</div>*@ <!-- Sidebar end -->

        <div id="content" class="body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - CRMProject</p>
            </footer>
        </div>
    </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
